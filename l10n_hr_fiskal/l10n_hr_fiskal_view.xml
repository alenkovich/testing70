		<menuitem id="menu_fiskal_1" name="Fiskalizacija" parent="base.menu_administration"
			sequence="1" />
		<menuitem id="menu_fiskal_2" name="Prijava Objekata"
			action="l10n_hr_fis_pprostor_action1" parent="menu_fiskal_1" />
	</data>
